{
  "name": "Kiosk",
  "description": "Launch any URL as a full-screen kiosk.",
  "manifest_version": 2,
  "version": "5.7.0",
  "author": {
    "name": "ZEBRADOG",
    "email": "support@zebradog.com"
  },
  "kiosk_enabled": true,
  "offline_enabled": true,
  "icons": {
    "16": "img/icon_16.png",
    "128": "img/icon_128.png"
  },
  "app": {
    "background": {
      "scripts": ["www/js/jquery.min.js","js/lib/wsc-chrome.js","js/admin.js","js/main.js"],
      "persistent": false
    }
  },
  "sockets":{
    "tcpServer": {
      "listen": "*"
    }
  },
  "permissions": [
    "system.display",
    "system.network",
    "power",
    "webview",
    "alwaysOnTopWindows",
    "storage",
    "app.window.fullscreen",
    "app.window.fullscreen.overrideEsc",
    {"fileSystem": ["directory","retainEntries"]}
  ],
  "optional_permissions": [ "audioCapture", "videoCapture" ]
}
